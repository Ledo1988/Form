extends pug/base

prepend vars
	- title = "Анкета"

append vars
	//-..

block content
	main
		.candidate--wrapper
			.candidate
				.candidate__img
					img(src="/images/img_avatar.jpeg" width="348" height="500" alt="Кандидат")
				.candidate__info
					+input("candidate__info-item", "name", "Елена", "text", "name")
					+input("candidate__info-item", "birthday", "27.10.1988", "text", "date")
					+input("candidate__info-item", "city", "Санкт-Петербург", "text", "city")
					+input("candidate__info-item candidate__info-item-contacts", "contacts", "+7(911) 240-03-14, elena_1988@live.ru", "text", "contacts")
		.skills--wrapper
			.skills
				.skills__main
					.skills__title
						| Навыки
					ul.skills__list
						+input__checkbox("skills__list-item", "HTML5", "HTML5", "", "HTML5", "checked")
						+input__checkbox("skills__list-item", "SASS", "SASS", "", "SASS", "checked")
						+input__checkbox("skills__list-item", "VanillaJS", "VanillaJS", "", "VanillaJS")
						+input__checkbox("skills__list-item", "GIT", "GIT", "", "GIT", "checked")
						+input__checkbox("skills__list-item", "CSS3", "CSS3", "", "CSS3", "checked")
						+input__checkbox("skills__list-item", "LESS", "LESS", "", "LESS")
						+input__checkbox("skills__list-item", "Angular", "Angular", "", "Angular")
						+input__checkbox("skills__list-item", "Foundation", "Foundation", "", "Foundation")
						+input__checkbox("skills__list-item", "БЭМ", "БЭМ", "", "БЭМ", "checked")
						+input__checkbox("skills__list-item", "GULP", "GULP", "", "GULP", "checked")
						+input__checkbox("skills__list-item", "Jquery", "Jquery", "", "Jquery", "checked")
						+input__checkbox("skills__list-item", "Boostrap", "Boostrap", "", "Boostrap", "checked")
				.skills__js
					.circle--wrapper
						svg.circle
							circle.circle__item.circle__item-first(cx="50%" cy="50%")
							circle.circle__item.circle__item-range.circle__item-divider-first(cx="50%" cy="50%")
							circle.circle__item.circle__item-range.circle__item-second(cx="50%" cy="50%")
							circle.circle__item.circle__item-range.circle__item-divider-second(cx="50%" cy="50%")
							circle.circle__item.circle__item-range.circle__item-third(cx="50%" cy="50%")
							circle.circle__item.circle__item-mask(cx="50%" cy="50%" stroke-dasharray="314, 628")
						.circle__needle
							span.circle__needle-img.sprite-ico_arrow
					.circle__slider--wrapper
						input(class="circle__slider" type="range" min="0" max="1000" value="500")
						label(class="circle__slider-label" for="")
							| Мой уровень владения Java Script
							span.circle__slider-number 0
